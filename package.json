{
  "name": "nerfinhos",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:all",
    "build:docs": "tsc -b && vite build --base=/Nerfas-Alfa/ --outDir=docs && shx cp docs/index.html docs/404.html",
    "build:firebase": "tsc -b && vite build --base=/ --outDir=dist",
    "build:all": "npm run build:docs && npm run build:firebase",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:firebase": "npm run build:firebase && vite preview --outDir dist",
    "preview:docs": "npm run build:docs && vite preview --outDir docs --base=/Nerfas-Alfa/",
    "deploy": "npm run build:all && npx firebase deploy",
    "test": "vitest"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.6.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.10.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "@radix-ui/react-popover": "^1.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "react-day-picker": "^9.4.4",
    "date-fns": "^3.6.0",
    "sonner": "^1.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "firebase-tools": "^14.26.0",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "shx": "^0.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.15"
  }
